<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bodytel.remapv2">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.BODY_SENSORS"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="com.bodytel.ReMapApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.welcome.WelcomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoToolbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.debug.DebugActivity"
            android:label="@string/title_activity_debug"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.listdata.ListDataActivity"
            android:label="@string/title_activity_list_data"
            android:parentActivityName=".ui.debug.DebugActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bodytel.remapv2.ui.debug.DebugActivity" />
        </activity>

        <activity android:name=".ui.bdisurvey.BdiSurveyActivity"
            android:label="@string/title_activity_survey"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.debug.DebugActivity"/>

        <activity android:name=".ui.audiosample.NewAudioSampleActivity"
            android:label="@string/title_activity_new_audio_sample"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.debug.DebugActivity"/>

        <activity android:name=".ui.audiosample.AudioSampleActivity"
            android:label="@string/title_activity_new_audio_sample"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.debug.DebugActivity"/>

        <activity android:name=".ui.sleepsurvey.SleepSurveyActivity"
            android:label="@string/title_activity_survey"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.debug.DebugActivity"/>

        <activity android:name=".ui.moodsurvey.MoodSurveyActivity"
            android:label="@string/title_activity_survey"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.debug.DebugActivity"/>

        <activity android:name=".ui.listdata.GoogleFitDistanceActivity"
            android:label="Distance"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.debug.DebugActivity"/>

        <activity android:name=".ui.listdata.SensorActivity"
            android:label="Accelerometer"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.debug.DebugActivity"/>
    </application>

</manifest>